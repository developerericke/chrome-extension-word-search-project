<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/static/images/logo_32.png" type="image/x-icon">
    <title>Forgot Password</title>
    <!-- CSS only -->
 
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
<link rel="stylesheet" href="/static/css/skeleton.css">
<link rel="stylesheet"  href="/static/css/authenticate.css">
</head>
<body>
  <%- include('header'); -%>
<div class="border border-2 rounded-3 shadow-lg" id="authenticate">
  <div style="text-align: center;" class="m-1 p-1 bg-light">
    <h3 class="text-info">Word Meaning Saver</h3>
    <img src="/static/images/Logo 200X200-trans.png" width="120px" height="80px" alt="">
    <p style="font-weight: 200;">A tool to help you save meanings of words that you search within google chrome</p>
  </div>
  <div id="passwordRecover">
      <div class="text-muted p-2 text-center mb-2" style="font-size: xx-large;">Recover Account</div>

        <% if( typeof error != 'undefined'){ %>
          <div class="alert alert-danger">
       
              <%- error %>
          </div>
        <% } %>
        
        <% if( typeof message != 'undefined'){ %>
          <div class="alert alert-success">
              <div >We have emailed you instructions to reset your password.Please check your email inbox or spam folder. The email may take upto 5 minutes </div>

          </div>
        <% } %>


      <form action="/recover" method="post">

          <div class="form-group">
              <label for="username"  class="text-muted ">Email associated with your account <span title="required" class="text-danger"><sup>*</sup></span> </label>
              <input required type="email" class="form-control" id="username" name="email" placeholder="Username">
          </div>

          
          
          <button type="submit" class="btn mt-3 btn-primary">Reset</button>

      </form>

      <div>
        <a href="/login" class="btn btn-link m-1">Login instead?</a><br>
        <a href="/signup" class="btn btn-link m-1">Create an account instead</a>
      </div>
  </div>
  </div>

<%- include('footer'); -%>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>    
<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</body>
</html>