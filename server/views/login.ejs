<%- include('header',{ title:'Login' }); -%>
<div class="border border-2 rounded-3" id="authenticate">
  <div id="login">
      <div class="bg-info text-center" style="font-size: x-large;">Login</div>
      <form action="/login" method="post">
          <div class="form-state">
            <% if( typeof error !== 'undefined'){ %>
              <div class="alert alert-danger">
                  <div style="text-decoration: underline;">Please fix the following errors : </div><br>
                  <%- error %>
              </div>
            <% } %>

          </div>
          <div class="form-group">
              <label for="username"  class="text-muted ">Email</label>
              <input type="email" class="form-control" id="username" name="_email" placeholder="Username">
          </div>

          <div class="form-group mt-3">
              <label for="password" class="text-muted">Password</label>
              <input type="password" class="form-control" id="password" name="_password" placeholder="Username">
          </div>
          
          <button type="submit" class="btn mt-3 btn-primary">Login</button>

      </form>
  </div>
  </div>

<%- include('footer'); -%>
