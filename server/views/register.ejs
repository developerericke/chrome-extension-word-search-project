<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="static/images/logo_32.png" type="image/x-icon">
    <title>Signup</title>
    <!-- CSS only -->
 
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
<link rel="stylesheet" href="static/css/skeleton.css">
<link rel="stylesheet" href="static/css/authenticate.css">
</head>
<body>
<%- include('header'); -%>
<div class="border border-2 rounded-3 shadow-lg" id="authenticate" style="padding-bottom: 100px;">
    <div style="text-align: center;" class="m-1 p-1 bg-light">
        <h3 class="text-info">Word Meaning Saver</h3>
        <img src="static/images/Logo 200X200-trans.png" width="120px" height="80px" alt="">
        <p style="font-weight: 200;">A tool to help you save meanings of words that you search within google chrome</p>
      </div>
    <div id="signup">
        <div class="text-muted p-2 text-center mb-2" style="font-size: xx-large;">Create an Account</div>
        <form action="/signup" method="post">


           
            <div class="form-state">
             <% if (typeof error !== 'undefined'){ %>

                <div class="alert alert-danger">
                    <div style="text-decoration: underline;">Please fix the following errors : </div><br>
                    <%- error %>
                </div>

             <% } %>

             <% if (typeof message !== 'undefined'){ %>

                <div class="alert alert-success">
                   Registration successful. 
                   <!-- Please check your email to activate your account. -->
                </div>

             <% } %>
            </div>

            
            <div class="form-group mt-2">
                <label for="register_bame"  class="text-muted ">Full Name <span title="required" class="text-danger"><sup>*</sup></span></label>
                <input required type="text" class="form-control" id="register_name" name="_name" placeholder="Full Name">
            </div>
            <div class="form-group mt-2">
                <label required for="register_username"  class="text-muted ">Email <span title="required" class="text-danger"><sup>*</sup></span></label>
                <input type="email" class="form-control" id="register_username" name="_email" placeholder="Email">
            </div>

            <div class="form-group mt-3">
                <label required for="register_password" class="text-muted">Password <span title="required" class="text-danger"><sup>*</sup></span></label>
                <input type="password" class="form-control" id="register_password" name="_password" placeholder="Password">
            </div>

            <div class="form-group mt-3">
                <label required for="r_confirm_password" class="text-muted">Confirm Password <span title="required" class="text-danger"><sup>*</sup></span></label>
                <input type="password" class="form-control" id="r_confirm_password" name="_confirm_password" placeholder="Confirm Password">
            </div>

            <button type="submit" class="btn mt-3 btn-primary">Signup</button>

        </form>
        <div>
            
            <a href="/login" class="btn btn-link m-1">Login instead</a>
          </div>

    </div>

    
</div>

<%- include('footer'); -%>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>    
<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</body>
</html>