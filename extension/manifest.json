
{

    "manifest_version": 3,
    "name":"Word Meaning Saver",
    "version":"1.0.0",
    "description": "A chrome extension tool to save meanings of words being searched in google chrome. ",

    "action": {
        "default_icon": {              
          "16": "images/logo 64X64-default.png",   
          "24": "images/logo 64X64-default.png",   
          "32": "images/logo 64X64-default.png"    
        },
        "default_title": "Word Meaning Saver" 
      
    },
    "options_ui": {
        "page": "popup.html",
        "open_in_tab": false
      },
      "icons": {
        "16": "images/logo 64X64-default.png",
        "24": "images/logo 64X64-default.png",
        "32": "images/logo 64X64-default.png",
        "48": "images/logo 64X64-default.png",
        "64": "images/logo 64X64-default.png"
      },
    



    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        
        "activeTab",
        "tabs",
        "notifications",
        "contextMenus"
     
    
    ],
    "homepage_url": "https://dictionary-save.eric-apps.space",
    "host_permissions": ["https://www.google.com/*","https://dictionary-save.eric-apps.space/*"]
 

}